                },
                "max_hold_time": {
                    "type": "string"
                },
                "max_queue_wait_time": {
                    "type": "string"
                },
                "max_ttl_expiration_count": {
                    "type": "integer"
                },
                "network_errors": {
                    "type": "integer"
                },
                "owner_change_count": {
                    "description": "Owner Statistics",
                    "type": "integer"
                },
                "owner_history": {
                    "description": "Owner history (keep last N owners for trending)",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/core.OwnerRecord"
                    }
                },
                "queue_timeout_count": {
                    "type": "integer"
                },
                "refresh_count": {
                    "type": "integer"
                },
                "stale_token_errors": {
                    "type": "integer"
                },
                "successful_acquires": {
                    "type": "integer"
                },
                "total_acquire_attempts": {
                    "description": "Usage Statistics",
                    "type": "integer"
                },
                "total_hold_time": {
                    "type": "string"
                },
                "total_queued_requests": {
                    "type": "integer"
                },
                "ttl_expiration_count": {
                    "description": "TTL/Expiration Statistics",
                    "type": "integer"
                },
                "unique_owners_count": {
                    "type": "integer"
                }
            }
        },
        "core.MetricsResponse": {
            "type": "object",
            "properties": {
                "lock_name": {
                    "type": "string"
                },
                "metrics": {
